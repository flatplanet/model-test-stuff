<% if user_signed_in? %>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Age</th>
        <th>Address</th>
        <th>Weight</th>
        <th>Gender</th>
        <th>Patient ID</th>
        <th>Actions</th>
    </thead>
    
    <% @my_patients.patient.each do |patient| %>
    <tr>
        <td><%= patient.first_name %></td>
        <td><%= patient.last_name %></td>
        <td><%= patient.age %></td>
        <td><%= patient.address %></td>
        <td><%= patient.weight %></td>
        <td><%= patient.gender %></td>
        <td><%= patient.id %></td>
        <td><%= link_to 'Show', patient_path(patient.id) %> | 
        <%= link_to 'Edit', edit_patient_path(patient.id) %> | 
        <%= link_to 'Edit All', patient_edit_all_path(patient.id) %> | 
        <%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
    </tr>
    
    <% end %>

</table>
<% else %>

Must Be Signed In To View This Page...
<% end %>
