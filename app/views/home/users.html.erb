<h2>Users</h2>

<% @users.each do |user| %>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
        <th colspan="2"><h4>
           Username: <%= user.user_name %> - <%= user.email %> 
        </h4></th>
    </tr>
    <tr>
      <th>Patient Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>    
    
    
    
    <% user.patient.each do |patient| %>
        <tr>
        <td><%= patient.first_name %> <%= patient.last_name %></td>
        
        <td>
            <%= link_to 'Show', patient, class: 'btn btn-default btn-xs' %>
            <%= link_to 'Edit', edit_patient_path(patient), class: 'btn btn-info btn-xs' %>
            <%= link_to 'Delete Patient', patient, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
        
    <% end %>
    </tr>
    
<br/><br/>
<% end %>
    </tbody>
</table>

    